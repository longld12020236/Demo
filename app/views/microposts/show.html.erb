<% provide(:title, @micropost.content)%>
<div class="subtoc">
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<span><%= gravatar_for @micropost.user %></span>
					<span><%= @micropost.content %></span>
				</h1>
				Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
			</section>
		</aside>
		<div class="col-md-8">
	    	<% if @micropost.comments.any? %>
	     		<h3>Comments Feed(<%= @micropost.comments.count %>)</h3>
	      		<ol class="microposts">
					<%= render @comments%>
	      		</ol>
	      		<%= will_paginate @comments %>
	    	<% end %>
	    	<p><br><p>
			<section class="micropost_form">
	    		<%= render 'shared/comment_form' %>
			</section>
	  	</div>
	</div>
</div>
