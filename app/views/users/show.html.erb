<% provide(:title, @user.name ) %>
<div class="subtoc">
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for @user 	%>
					<h1><%= @user.name %></h1>
					<span><%= pluralize(@user.microposts.count, "entry") %></span>
				</h1>
			</section>
		    <section class="stats">
      			<%= render 'shared/stats' %>
    		</section>

		</aside>
		<div class="col-md-8">
			<%= render 'follow_form' if logged_in? %>
	    	<% if @user.microposts.any? %>
	     		<h3>Entrie Feed(<%= @user.microposts.count %>)</h3>
	      		<ol class="microposts">
	        		<%= render @microposts %>

	      		</ol>
	      		<%= will_paginate @microposts %>
	    	<% end %>
	  	</div>
	</div>
</div>