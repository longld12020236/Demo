<% provide(:title, @user.name ) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1 style="color: white">
				<%= gravatar_for @user 	%>
				<%= @user.name			%>
			</h1>
		</section>
	</aside>
	<div class="col-md-8">
    	<% if @user.microposts.any? %>
     		<h3 style="color: white">Microposts Feed(<%= @user.microposts.count %>)</h3>
      		<ol class="microposts" style="color: white">
        		<%= render @microposts %>
      		</ol>
      		<%= will_paginate @microposts %>
    	<% end %>
  	</div>
</div>